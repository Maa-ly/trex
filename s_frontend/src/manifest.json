{
  "manifest_version": 3,
  "name": "Media NFT Tracker",
  "version": "1.0.0",
  "description": "Track your media consumption and earn NFTs on Casper Network",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "src/options/index.html",
  "web_accessible_resources": [
    {
      "resources": ["src/dashboard/index.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
